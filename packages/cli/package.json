    "aws-cdk": "^2.0.0",
    "aws-cdk-lib": "^2.0.0",
    "buffer": "^6.0.3",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.0",
    "cli-table3": "^0.6.5",
    "constructs": "^10.0.0",
    "esbuild": "^0.25.4",
    "express": "^4.21.0",
    "glob": "^11.0.2",
    "process": "^0.11.10",
    "ts-morph": "^26.0.0",
    "wrangler": "^4.0.0",
    "yargs": "^17.0.0",
    "zod": "^3.22.0"
